{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Lanzar ConDHor",
      // ¡IMPORTANTE! Esta es la ruta al ejecutable de NW.js
      // Asume que la carpeta de NW.js está al mismo nivel que tu proyecto.
      // Si no es así, ajusta la ruta.
      "runtimeExecutable": "${workspaceFolder}/../nwjs-sdk/nw.exe",

      "runtimeArgs": [
        "${workspaceFolder}" // Le dice a NW.js que ejecute esta carpeta de proyecto
      ]
    }
  ]
}